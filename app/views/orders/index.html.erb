<div id="orders" class="min-w-full divide-y divide-gray-200 space-y-5">
  <% if @orders.present? && @orders.any? %>
    <% @orders.each do |order| %>
      <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
        <%= render order %>
      </div>
    <% end %>
  <% else %>
    <p class="text-center my-10">No orders found.</p>
  <% end %>
</div>
