<%= form_with(model: order, class: "contents") do |form| %>
  <% if order.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul class="list-disc ml-6">
        <% order.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :client_id %>
    <%= form.text_field :client_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": order.errors[:client_id].none?, "border-red-400 focus:outline-red-600": order.errors[:client_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :delivery_address %>
    <%= form.textarea :delivery_address, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": order.errors[:delivery_address].none?, "border-red-400 focus:outline-red-600": order.errors[:delivery_address].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :delivary_date %>
    <%= form.date_field :delivary_date, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": order.errors[:delivary_date].none?, "border-red-400 focus:outline-red-600": order.errors[:delivary_date].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :delivary_time %>
    <%= form.time_field :delivary_time, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": order.errors[:delivary_time].none?, "border-red-400 focus:outline-red-600": order.errors[:delivary_time].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :customer_name %>
    <%= form.text_field :customer_name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": order.errors[:customer_name].none?, "border-red-400 focus:outline-red-600": order.errors[:customer_name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :phone_number %>
    <%= form.number_field :phone_number, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": order.errors[:phone_number].none?, "border-red-400 focus:outline-red-600": order.errors[:phone_number].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :status %>
    <%= form.text_field :status, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": order.errors[:status].none?, "border-red-400 focus:outline-red-600": order.errors[:status].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :total_price %>
    <%= form.text_field :total_price, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": order.errors[:total_price].none?, "border-red-400 focus:outline-red-600": order.errors[:total_price].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
