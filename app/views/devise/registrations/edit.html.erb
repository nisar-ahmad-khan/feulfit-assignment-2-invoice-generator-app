<div class="min-h-[70vh] flex items-center justify-center">
  <div class="w-full max-w-lg bg-white shadow-lg rounded-xl p-8">

    <h2 class="text-2xl font-bold text-center text-indigo-600 mb-6">
      Edit <%= resource_name.to_s.humanize %>
    </h2>

    <%= form_for(
      resource,
      as: resource_name,
      url: registration_path(resource_name),
      html: { method: :put, class: "space-y-5" }
    ) do |f| %>

      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Email -->
      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email,
          autofocus: true,
          autocomplete: "email",
          class: "w-full rounded-md border-gray-300 focus:border-indigo-500 focus:ring-indigo-500 px-3 py-2" %>
      </div>

      <!-- Pending Confirmation -->
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="bg-yellow-50 border border-yellow-300 text-yellow-800 text-sm px-4 py-3 rounded-md">
          Currently waiting confirmation for:
          <span class="font-medium"><%= resource.unconfirmed_email %></span>
        </div>
      <% end %>

      <!-- New Password -->
      <div>
        <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <p class="text-xs text-gray-500 mb-1">
          Leave blank if you don’t want to change it
        </p>
        <%= f.password_field :password,
          autocomplete: "new-password",
          class: "w-full rounded-md border-gray-300 focus:border-indigo-500 focus:ring-indigo-500 px-3 py-2" %>

        <% if @minimum_password_length %>
          <p class="text-xs text-gray-500 mt-1">
            <%= @minimum_password_length %> characters minimum
          </p>
        <% end %>
      </div>

      <!-- Password Confirmation -->
      <div>
        <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password_confirmation,
          autocomplete: "new-password",
          class: "w-full rounded-md border-gray-300 focus:border-indigo-500 focus:ring-indigo-500 px-3 py-2" %>
      </div>

      <!-- Current Password -->
      <div>
        <%= f.label :current_password, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <p class="text-xs text-gray-500 mb-1">
          We need your current password to confirm changes
        </p>
        <%= f.password_field :current_password,
          autocomplete: "current-password",
          class: "w-full rounded-md border-gray-300 focus:border-indigo-500 focus:ring-indigo-500 px-3 py-2" %>
      </div>

      <!-- Update Button -->
      <div>
        <%= f.submit "Update",
          class: "w-full bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2.5 rounded-md transition duration-200" %>
      </div>
    <% end %>

    <!-- Danger Zone -->
    <div class="mt-10 border-t pt-6">
      <h3 class="text-lg font-semibold text-red-600 mb-2">
        Danger Zone
      </h3>

      <p class="text-sm text-gray-600 mb-4">
        Unhappy? You can permanently delete your account.
      </p>

      <%= button_to "Cancel my account",
        registration_path(resource_name),
        method: :delete,
        data: { confirm: "Are you sure?" },
        class: "w-full bg-red-500 hover:bg-red-600 text-white font-medium py-2.5 rounded-md transition" %>
    </div>

    <!-- Back Link -->
    <div class="mt-6 text-center">
      <%= link_to "← Back",
        request.referer || root_path,
        class: "text-sm text-indigo-600 hover:underline" %>
    </div>

  </div>
</div>
