<div class="min-h-[70vh] flex items-center justify-center">
  <div class="w-full max-w-md bg-white shadow-lg rounded-xl p-8">

    <h2 class="text-2xl font-bold text-center text-indigo-600 mb-6">
      Log in
    </h2>

    <%= form_for(
      resource,
      as: resource_name,
      url: session_path(resource_name),
      html: { class: "space-y-5" }
    ) do |f| %>

      <!-- Email -->
      <div>
        <%= f.label :email,
          class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email,
          autofocus: true,
          autocomplete: "email",
          class: "w-full border-2 rounded-md border-gray-300 focus:border-indigo-500 focus:ring-indigo-500 px-3 py-2" %>
      </div>

      <!-- Password -->
      <div>
        <%= f.label :password,
          class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password,
          autocomplete: "current-password",
          class: "w-full border-2 rounded-md border-gray-300 focus:border-indigo-500 focus:ring-indigo-500 px-3 py-2" %>
      </div>

      <!-- Remember Me -->
      <% if devise_mapping.rememberable? %>
        <div class="flex items-center justify-between">
          <label class="flex items-center gap-2 text-sm text-gray-600">
            <%= f.check_box :remember_me,
              class: "rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
            Remember me
          </label>

          <%= link_to "Forgot password?",
            new_password_path(resource_name),
            class: "text-sm text-indigo-600 hover:underline" %>
        </div>
      <% end %>

      <!-- Submit -->
      <div>
        <%= f.submit "Log in",
          class: "w-full bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2.5 rounded-md transition duration-200" %>
      </div>
    <% end %>

    <!-- Devise Links -->
    <div class="mt-6 text-center text-sm text-gray-600">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
