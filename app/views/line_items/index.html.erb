<% content_for :title, "Line Items" %>

<div class="max-w-5xl mx-auto mt-10 space-y-6">

  <!-- Notice -->
  <% if notice.present? %>
    <div class="bg-green-100 text-green-700 px-4 py-2 rounded-md">
      <%= notice %>
    </div>
  <% end %>

  <!-- Page Heading -->
  <h1 class="text-2xl font-bold text-gray-800">Line Items</h1>

  <!-- Line Items List -->
  <div id="line_items" class="space-y-4">
    <% @line_items.each do |line_item| %>
      <div class="bg-white shadow-md rounded-xl p-4 flex justify-between items-center">
        <div>
          <%= render line_item %>
        </div>
        <div class="flex gap-2">
          <%= link_to "Show", line_item,
            class: "bg-indigo-600 hover:bg-indigo-700 text-white font-medium px-3 py-1.5 rounded-md transition duration-200" %>
          <%= link_to "Edit", edit_line_item_path(line_item),
            class: "bg-yellow-400 hover:bg-yellow-500 text-white font-medium px-3 py-1.5 rounded-md transition duration-200" %>
          <%= button_to "Delete", line_item,
            method: :delete,
            data: { confirm: "Are you sure?" },
            class: "bg-red-600 hover:bg-red-700 text-white font-medium px-3 py-1.5 rounded-md transition duration-200" %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- New Line Item Button -->
  <div>
    <%= link_to "New Line Item", new_line_item_path,
      class: "bg-green-600 hover:bg-green-700 text-white font-medium px-4 py-2 rounded-md transition duration-200" %>
  </div>

</div>
