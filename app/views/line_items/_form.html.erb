<%= form_with(model: line_item, class: "space-y-6") do |form| %>

  <!-- Error Messages -->
  <% if line_item.errors.any? %>
    <div class="bg-red-100 text-red-700 p-4 rounded-md">
      <h2 class="font-semibold">
        <%= pluralize(line_item.errors.count, "error") %> prohibited this line item from being saved:
      </h2>
      <ul class="list-disc list-inside mt-2">
        <% line_item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Description -->
  <div>
    <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :description, class: "w-full rounded-md border-gray-300 focus:border-indigo-500 focus:ring-indigo-500 px-3 py-2" %>
  </div>

  <!-- Unit Price -->
  <div>
    <%= form.label :unit_price, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :unit_price, class: "w-full rounded-md border-gray-300 focus:border-indigo-500 focus:ring-indigo-500 px-3 py-2" %>
  </div>

  <!-- Total Amount -->
  <div>
    <%= form.label :total_amount, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :total_amount, class: "w-full rounded-md border-gray-300 focus:border-indigo-500 focus:ring-indigo-500 px-3 py-2" %>
  </div>

  <!-- Invoice ID -->
  <div>
    <%= form.label :invoice_id, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :invoice_id, class: "w-full rounded-md border-gray-300 focus:border-indigo-500 focus:ring-indigo-500 px-3 py-2" %>
  </div>

  <!-- Product ID -->
  <div>
    <%= form.label :product_id, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :product_id, class: "w-full rounded-md border-gray-300 focus:border-indigo-500 focus:ring-indigo-500 px-3 py-2" %>
  </div>

  <!-- Submit -->
  <div>
    <%= form.submit "Save Line Item", class: "bg-indigo-600 hover:bg-indigo-700 text-white font-medium px-4 py-2 rounded-md transition duration-200" %>
  </div>

<% end %>
