<%= form_with(model: product, class: "space-y-6") do |form| %>

  <!-- Error Messages -->
  <% if product.errors.any? %>
    <div class="bg-red-100 text-red-700 p-4 rounded-md">
      <h2 class="font-semibold">
        <%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:
      </h2>
      <ul class="list-disc list-inside mt-2">
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Name Field -->
  <div>
    <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :name, class: "w-full rounded-md border-gray-300 focus:border-indigo-500 focus:ring-indigo-500 px-3 py-2" %>
  </div>

  <!-- Unit Price Field -->
  <div>
    <%= form.label :unit_price, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :unit_price, class: "w-full rounded-md border-gray-300 focus:border-indigo-500 focus:ring-indigo-500 px-3 py-2" %>
  </div>

  <!-- Submit Button -->
  <div>
    <%= form.submit "Save Product",
      class: "bg-indigo-600 hover:bg-indigo-700 text-white font-medium px-4 py-2 rounded-md transition duration-200" %>
  </div>

<% end %>
