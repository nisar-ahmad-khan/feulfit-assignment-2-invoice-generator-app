<% content_for :title, "Editing Product" %>

<div class="max-w-3xl mx-auto mt-10 space-y-6">

  <!-- Page Heading -->
  <h1 class="text-2xl font-bold text-gray-800 mb-4">
    Editing Product
  </h1>

  <!-- Form Card -->
  <div class="bg-white shadow-md rounded-xl p-6">
    <%= render "form", product: @product %>
  </div>

  <!-- Action Buttons -->
  <div class="flex flex-wrap gap-4 mt-4">
    <%= link_to "Show this product", @product,
      class: "bg-indigo-600 hover:bg-indigo-700 text-white font-medium px-4 py-2 rounded-md transition duration-200" %>

    <%= link_to "Back to products", products_path,
      class: "bg-gray-200 hover:bg-gray-300 text-gray-800 font-medium px-4 py-2 rounded-md transition duration-200" %>
  </div>

</div>
