<%= form_with(model: option_group, class: "contents" , id: "option-groups-form") do |form| %>
  <% if option_group.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(option_group.errors.count, "error") %> prohibited this option_group from being saved:</h2>

      <ul class="list-disc ml-6">
        <% option_group.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :menu_item_id %>
    <%= form.collection_select :menu_item_id, MenuItem.all ,:id , :name , {prompt:"Select Menu Item"} , class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": option_group.errors[:menu_item_id].none?, "border-red-400 focus:outline-red-600": option_group.errors[:menu_item_id].any?}] ,
    id: "menu_item_id"
    %>
  </div>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": option_group.errors[:name].none?, "border-red-400 focus:outline-red-600": option_group.errors[:name].any?}],
    id: "name_input"
    %>
  </div>

  <div class="my-5 flex items-center gap-2">
    <%= form.label :required %>
    <%= form.checkbox :required, class: ["block shadow-sm rounded-md border order-first h-5 w-5", {"border-gray-400 focus:outline-blue-600": option_group.errors[:required].none?, "border-red-400 focus:outline-red-600": option_group.errors[:required].any?}],
    id: "required_input"
    %>
  </div>

  <div class="my-5">
    <%= form.label :min_selection %>
    <%= form.number_field :min_selection, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": option_group.errors[:min_selection].none?, "border-red-400 focus:outline-red-600": option_group.errors[:min_selection].any?}],
    id: "min_selection"
    %>
  </div>

  <div class="my-5">
    <%= form.label :max_selection %>
    <%= form.number_field :max_selection, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": option_group.errors[:max_selection].none?, "border-red-400 focus:outline-red-600": option_group.errors[:max_selection].any?}] ,
    id: "max_selection"
    %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>

<script>
  const protocol = window.location.protocol === "https:" ? "wss" : "ws";
  const socket = new WebSocket(`${protocol}://${window.location.host}/cable`);

  socket.onopen = () => {
    socket.send(JSON.stringify({
      command: "subscribe",
      identifier: JSON.stringify({ channel: "OptiongroupsChannel" })
    }));
  };

  socket.onmessage = (event) => {
    const response = JSON.parse(event.data);

    if (response.type === "ping" || response.type === "confirm_subscription") return;
    if (!response.message) return;
  };

  document.getElementById("option-groups-form").addEventListener("submit", function (e) {
    e.preventDefault();

    socket.send(JSON.stringify({
      command: "message",
      identifier: JSON.stringify({ channel: "OptiongroupsChannel" }),
      data: JSON.stringify({
        menu_item_id: document.getElementById("menu_item_id").value,
        name: document.getElementById("name_input").value,
        required: document.getElementById("required_input").checked,
        min_selection: document.getElementById("min_selection").value,
        max_selection: document.getElementById("max_selection").value,
      })
    }));

    this.reset();
    window.location.href = "/option_groups"
  });
</script>
