<div id="<%= dom_id option_group %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Menu item:</strong>
    <%= option_group.menu_item_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Name:</strong>
    <%= option_group.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Required:</strong>
    <%= option_group.required? ? "Yes" : "No" %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Min selection:</strong>
    <%= option_group.min_selection %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Max selection:</strong>
    <%= option_group.max_selection %>
  </div>
</div>
