<%= form_with(model: menu_category, class: "contents", id: "menu-category-form") do |form| %>
  <% if menu_category.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(menu_category.errors.count, "error") %> prohibited this menu_category from being saved:</h2>

      <ul class="list-disc ml-6">
        <% menu_category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, id: "menu_category_name",
      class: "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.textarea :description, id: "menu_category_description", rows: 4,
      class: "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :position %>
    <%= form.number_field :position, id: "menu_category_position",
      class: "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <button
      type="submit"
      class="w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white font-medium">
      Save
    </button>
  </div>
<% end %>

<div id="chatbox" class="mt-6 space-y-2"></div>


<script>
  const protocol = window.location.protocol === "https:" ? "wss" : "ws";
  const socket = new WebSocket(`${protocol}://${window.location.host}/cable`);

  socket.onopen = () => {
    socket.send(JSON.stringify({
      command: "subscribe",
      identifier: JSON.stringify({ channel: "RealtimeChannel" })
    }));
  };

  socket.onmessage = (event) => {
    const response = JSON.parse(event.data);

    // Ignore pings and subscription confirmations
    if (response.type === "ping" || response.type === "confirm_subscription") return;
    if (!response.message) return;

    const chatbox = document.getElementById("chatbox");
    if (!chatbox) return;

    const p = document.createElement("p");
    p.innerText = `
      ${response.message.name}
      (${response.message.position})
      - ${response.message.description}
    `;
    chatbox.appendChild(p);
  };

  function sendMessage() {
    const name = document.getElementById("name_input").value;
    const description = document.getElementById("description_input").value;
    const position = document.getElementById("position_input").value;

    socket.send(JSON.stringify({
      command: "message",
      identifier: JSON.stringify({ channel: "RealtimeChannel" }),
      data: JSON.stringify({
        name: name,
        description: description,
        position: position
      })
    }));
  }
</script>
