<div id="<%= dom_id invoice %>" class="bg-white shadow-md rounded-xl p-6 max-w-2xl">

  <div class="flex items-center justify-between mb-6">
    <h2 class="text-xl font-bold text-gray-800">
      Invoice <span class="text-indigo-600">#<%= invoice.invoice_number %></span>
    </h2>

    <span class="
      px-3 py-1 rounded-full text-sm font-medium
      <%= case invoice.status
          when "Paid" then "bg-green-100 text-green-700"
          when "Sent" then "bg-blue-100 text-blue-700"
          else "bg-gray-100 text-gray-700"
          end %>
    ">
      <%= invoice.status %>
    </span>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 text-sm">
    <div>
      <p class="text-gray-500">Issue Date</p>
      <p class="font-medium text-gray-800">
        <%= invoice.issue_date.strftime("%B %d, %Y") if invoice.issue_date %>
      </p>
    </div>

    <div>
      <p class="text-gray-500">Due Date</p>
      <p class="font-medium text-gray-800">
        <%= invoice.due_date.strftime("%B %d, %Y") if invoice.due_date %>
      </p>
    </div>

    <div>
      <p class="text-gray-500">Client</p>
      <p class="font-medium text-gray-800">
        <%= invoice.client&.name || invoice.client_id %>
      </p>
    </div>
  </div>

</div>
