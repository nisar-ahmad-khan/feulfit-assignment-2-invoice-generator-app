<!-- Invoice Container -->
<div style="max-width: 800px; margin: 0 auto; background-color: #fff; box-shadow: 0 10px 25px rgba(0,0,0,0.1); border-radius: 16px; padding: 32px; font-family: Arial, sans-serif; color: #333;">

  <!-- Header -->
  <div style="display: flex; justify-content: space-between; align-items: center; border-bottom: 1px solid #e5e7eb; padding-bottom: 16px; margin-bottom: 24px;">
    <div style="display: flex; align-items: center; gap: 24px;">
      <div style="font-size: 32px; font-weight: 800; color: #4f46e5; letter-spacing: -1px;">
        Feul<span style="color: #10b981;">Fit</span>
      </div>
      <div>
        <h2 style="margin: 0; font-size: 24px; font-weight: bold; color: #1f2937;">
          Invoice #<%= @invoice.id %>
        </h2>
        <span style="color: #6b7280; font-size: 14px;">
          Issue Date: <%= @invoice.issue_date.strftime("%b %d, %Y") %>
        </span>
      </div>
    </div>

    <span style="padding: 4px 12px; border-radius: 9999px; font-size: 12px; font-weight: 500;
      background-color: <%= @invoice.status == 'paid' ? '#d1fae5' : '#fef3c7' %>;
      color: <%= @invoice.status == 'paid' ? '#065f46' : '#92400e' %>;">
      <%= @invoice.status.capitalize %>
    </span>
  </div>

  <!-- Client & Company Info -->
  <div style="display: flex; justify-content: space-between; flex-wrap: wrap; gap: 24px; margin-bottom: 24px;">
    <div style="flex: 1; min-width: 200px;">
      <h3 style="margin-bottom: 4px; font-weight: 600; color: #374151;">Billed To:</h3>
      <p style="margin: 0; font-weight: 500; color: #1f2937;"><%= @invoice.client.name %></p>
      <p style="margin: 0; color: #6b7280;"><%= @invoice.client.email %></p>
    </div>

    <div style="flex: 1; min-width: 200px;">
      <h3 style="margin-bottom: 4px; font-weight: 600; color: #374151;">From:</h3>
      <p style="margin: 0; font-weight: 500; color: #1f2937;">FeulFit</p>
    </div>
  </div>

  <!-- Line Items -->
  <div style="overflow-x:auto;">
    <table style="width: 100%; border-collapse: collapse; border: 1px solid #e5e7eb;">
      <thead style="background-color: #f3f4f6;">
        <tr>
          <th style="border: 1px solid #e5e7eb; padding: 12px; text-align: left;">Product</th>
          <th style="border: 1px solid #e5e7eb; padding: 12px; text-align: center;">Qty</th>
          <th style="border: 1px solid #e5e7eb; padding: 12px; text-align: right;">Unit Price</th>
          <th style="border: 1px solid #e5e7eb; padding: 12px; text-align: right;">Total</th>
        </tr>
      </thead>
      <tbody>
        <% @invoice.line_items.each do |item| %>
          <tr>
            <td style="border: 1px solid #e5e7eb; padding: 12px;"><%= item.product.name %></td>
            <td style="border: 1px solid #e5e7eb; padding: 12px; text-align: center;"><%= item.quantity %></td>
            <td style="border: 1px solid #e5e7eb; padding: 12px; text-align: right;"><%= number_to_currency(item.unit_price) %></td>
            <td style="border: 1px solid #e5e7eb; padding: 12px; text-align: right; font-weight: 600;">
              <%= number_to_currency(item.total_amount) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- Totals -->
  <div style="display: flex; flex-direction: column; align-items: flex-end; margin-top: 24px; gap: 8px; width: 100%; max-width: 260px;">
    <div style="display: flex; justify-content: space-between; width: 100%;">
      <span>Subtotal:</span>
      <span><%= number_to_currency(@invoice.subtotal) %></span>
    </div>
    <div style="display: flex; justify-content: space-between; width: 100%;">
      <span>Tax:</span>
      <span><%= number_to_currency(@invoice.tax) %></span>
    </div>
    <div style="display: flex; justify-content: space-between; width: 100%;">
      <span>Discount:</span>
      <span><%= number_to_currency(@invoice.discount) %></span>
    </div>
    <div style="display: flex; justify-content: space-between; width: 100%; font-weight: bold; font-size: 18px; color: #4f46e5;">
      <span>Total:</span>
      <span><%= number_to_currency(@invoice.grand_total) %></span>
    </div>
  </div>

</div>
