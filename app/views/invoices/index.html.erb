<div class="max-w-5xl mx-auto mt-10 bg-white shadow-md rounded-xl overflow-hidden">

  <h1 class="text-2xl font-bold text-gray-800 p-6 border-b">
    Invoices
  </h1>

  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Invoice #
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Client
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Status
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Total
          </th>
        </tr>
      </thead>

      <tbody class="bg-white divide-y divide-gray-200">
        <% @invoices.each do |invoice| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap text-gray-800 font-medium">
              <%= link_to invoice.invoice_number, invoice_path(invoice), class: "text-indigo-600 hover:underline" %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-gray-700">
              <%= invoice.client&.name || "N/A" %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="
                px-2 inline-flex text-xs leading-5 font-semibold rounded-full
                <%= case invoice.status
                    when "Paid" then "bg-green-100 text-green-700"
                    when "Sent" then "bg-blue-100 text-blue-700"
                    else "bg-gray-100 text-gray-700"
                    end %>
              ">
                <%= invoice.status %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-gray-800 font-medium">
              <%= number_to_currency(invoice.grand_total) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>
